    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            const tabs = document.querySelectorAll('.tab-btn');
            const sections = document.querySelectorAll('.content-section');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const target = tab.dataset.target;

                    tabs.forEach(t => {
                        t.classList.remove('tab-active');
                        t.classList.add('tab-inactive');
                    });
                    tab.classList.add('tab-active');
                    tab.classList.remove('tab-inactive');
                    
                    sections.forEach(section => {
                        if (section.id === target) {
                            section.classList.remove('hidden');
                        } else {
                            section.classList.add('hidden');
                        }
                    });
                });
            });

            // Data for charts
            const marketShareData = {
                labels: ['McDonald\'s', 'Burger King', 'KFC', 'Old Wild West', 'Altri'],
                datasets: [{
                    label: 'Quota di Mercato',
                    data: [48, 15, 7, 5, 25],
                    backgroundColor: [
                        '#FFC72C', 
                        '#D62300', 
                        '#A3080C', 
                        '#8B4513', 
                        '#CCCCCC'
                    ],
                    hoverOffset: 4
                }]
            };

            const awarenessData = {
                labels: ['McDonald\'s', 'Burger King', 'Old Wild West', 'KFC'],
                datasets: [{
                    label: 'Notoriet√† Spontanea (%)',
                    data: [95, 80, 65, 55],
                    backgroundColor: ['#FFC72C', '#D62300', '#8B4513', '#A3080C'],
                    borderColor: ['#c4971a', '#a51c00', '#693510', '#7d0609'],
                    borderWidth: 1
                }]
            };

            // Chart rendering
            const marketShareCtx = document.getElementById('marketShareChart');
            if(marketShareCtx) {
                new Chart(marketShareCtx, {
                    type: 'doughnut',
                    data: marketShareData,
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        let label = context.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.parsed !== null) {
                                            label += context.parsed + '%';
                                        }
                                        return label;
                                    }
                                }
                            }
                        }
                    }
                });
            }

            const awarenessCtx = document.getElementById('awarenessChart');
            if(awarenessCtx) {
                new Chart(awarenessCtx, {
                    type: 'bar',
                    data: awarenessData,
                    options: {
                        indexAxis: 'y',
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            x: {
                                beginAtZero: true,
                                max: 100
                            }
                        }
                    }
                });
            }

            // Trends data and rendering
            const trendsData = [
                { icon: 'üåü', title: 'Premiumization', description: 'I consumatori cercano ingredienti di qualit√† superiore, ricette pi√π elaborate e un\'esperienza complessiva "premium", anche nel fast food.' },
                { icon: 'üì±', title: 'Digitalizzazione e Delivery', description: 'Le piattaforme di delivery, il click & collect e i chioschi digitali in-store sono ormai standard. L\'efficienza e la personalizzazione sono diventate un fattore chiave.' },
                { icon: 'ü§ù', title: 'Esperienza e Socialit√†', description: 'Il QSR non √® solo un posto dove mangiare velocemente, ma un luogo di aggregazione. Il design del locale e il comfort giocano un ruolo cruciale.' },
                { icon: 'üåø', title: 'Salute e Sostenibilit√†', description: 'Cresce l\'interesse per opzioni pi√π salutari e per la sostenibilit√† (packaging, filiera). La trasparenza su questi temi sta diventando un valore.' },
                { icon: 'üáÆüáπ', title: 'Localizzazione dell\'Offerta', description: 'I brand globali che integrano ingredienti o ricette italiane acquisiscono maggiore rilevanza culturale e appeal per il consumatore locale.' },
                { icon: 'üí∞', title: 'Value for Money', description: 'Il rapporto qualit√†-prezzo rimane un driver fondamentale. Le promozioni, i menu convenienti e i programmi fedelt√† sono strumenti essenziali.' }
            ];

            const trendsContainer = document.getElementById('trends-container');
            if (trendsContainer) {
                trendsData.forEach(trend => {
                    const trendCard = document.createElement('div');
                    trendCard.className = 'bg-gray-50 p-6 rounded-lg border border-gray-200 cursor-pointer hover:shadow-md transition-shadow';
                    trendCard.innerHTML = `
                        <div class="flex items-center mb-3">
                             <span class="text-3xl mr-3">${trend.icon}</span>
                             <h4 class="text-lg font-semibold text-gray-800">${trend.title}</h4>
                        </div>
                        <p class="text-gray-600 text-sm trend-description">${trend.description}</p>
                    `;
                    trendsContainer.appendChild(trendCard);
                });
            }

            // Gemini API functionality
            const campaignBtn = document.getElementById('generate-campaign-btn');
            const colonelBtn = document.getElementById('generate-colonel-btn');
            const campaignOutput = document.getElementById('campaign-output');
            const colonelOutput = document.getElementById('colonel-output');
            const clusterSelect = document.getElementById('cluster-select');

            const apiKey = ""; 
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;

            async function callGeminiAPI(prompt, outputElement) {
                outputElement.innerHTML = '<div class="loader"></div>';
                try {
                    const payload = {
                        contents: [{ parts: [{ text: prompt }] }],
                    };
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (!response.ok) {
                        throw new Error(`API error: ${response.statusText}`);
                    }

                    const result = await response.json();
                    const text = result.candidates?.[0]?.content?.parts?.[0]?.text;
                    
                    if (text) {
                        // Basic markdown to HTML conversion
                        let html = text
                            .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                            .replace(/\n/g, '<br>');
                        outputElement.innerHTML = `<div class="gemini-output p-4 bg-white rounded-md border">${html}</div>`;
                    } else {
                        outputElement.innerText = 'Nessuna risposta ricevuta dall\'API. Riprova.';
                    }
                } catch (error) {
                    console.error("Gemini API call failed:", error);
                    outputElement.innerText = 'Si √® verificato un errore durante la generazione dei contenuti. Controlla la console per i dettagli.';
                }
            }

            campaignBtn.addEventListener('click', () => {
                const selectedValue = clusterSelect.value;
                const clusterElement = document.getElementById(`${selectedValue}-cluster`);
                const clusterTitle = clusterElement.querySelector('h3').innerText;
                const clusterDescription = clusterElement.querySelector('p').innerText + " " + clusterElement.querySelector('ul').innerText.replace(/\n/g, ' ');
                
                const prompt = `Sei un esperto direttore marketing per KFC Italia. Basandoti sul profilo del consumatore "${clusterTitle}" (${clusterDescription}), genera tre idee creative e culturalmente rilevanti per una campagna di marketing. Per ogni idea, fornisci un titolo accattivante, un breve concept, e i canali di comunicazione principali. Formatta la risposta usando markdown.`;
                
                callGeminiAPI(prompt, campaignOutput);
            });

            colonelBtn.addEventListener('click', () => {
                const prompt = `Agisci come un esperto di branding e localizzazione culturale per il mercato italiano. Il tuo compito √® ridefinire il ruolo del Colonnello Sanders per renderlo autentico e rilevante per l'Italia. Genera tre concept distinti per il suo personaggio, spiegando per ciascuno il tono di voce, i valori chiave e come potrebbe essere rappresentato nella comunicazione di KFC Italia. Formatta la risposta usando markdown.`;
                callGeminiAPI(prompt, colonelOutput);
            });
        });
    </script>
</body>
</html>

